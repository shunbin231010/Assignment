<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FundraisingDetails">

    <ImageView
        android:id="@+id/fundraising_img"
        android:layout_width="413dp"
        android:layout_height="274dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/fundraising_organization_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="OP Company"
        app:layout_constraintStart_toEndOf="@+id/fundraising_orgazation_img"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_img" />

    <ImageView
        android:id="@+id/fundraising_orgazation_img"
        android:layout_width="30dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_img"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/fundraising_title_edit"
        android:layout_width="382dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="8dp"
        android:text="Save Marine Life - Safeguarding our oceans for a thriving future."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_img" />

    <TextView
        android:id="@+id/fundraising_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:text="Time Duration : "
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_title_edit" />

    <TextView
        android:id="@+id/fundraising_starttime_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="25-10-2023"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/fundraising_time"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_title_edit" />

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:text="to"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/fundraising_starttime_edit"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_title_edit" />

    <TextView
        android:id="@+id/fundraising_endtime_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:text="25-1-2024"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/to"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_title_edit" />

    <TextView
        android:id="@+id/fundraising_currentdonate_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="RM 41000.00"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_title_edit" />

    <TextView
        android:id="@+id/fundraising_totaldonate_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="216dp"
        android:layout_marginTop="24dp"
        android:text="RM 800000.00"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_title_edit" />

    <TextView
        android:id="@+id/current_donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Raised / RM"
        android:layout_marginStart="8dp"
        android:textSize="9sp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_currentdonate_edit" />

    <TextView
        android:id="@+id/total_donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="216dp"
        android:layout_marginTop="1dp"
        android:text="Target Goal / RM"
        android:textSize="9sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_totaldonate_edit" />

    <ProgressBar
        android:id="@+id/progress_donate"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="236dp"
        android:layout_height="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="100"
        android:progress="51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_donate" />

    <TextView
        android:id="@+id/progress_donate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="50.67%"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/progress_donate"
        app:layout_constraintTop_toBottomOf="@+id/total_donate" />

    <TextView
        android:id="@+id/fundraising_detail_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Fundraising Details"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_donate" />

    <ScrollView
        android:id="@+id/scrollview_fundraising_details"
        android:layout_width="392dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_detail_txt">

        <TextView
            android:id="@+id/event_content_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bio"
            android:textSize="11sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/scrollview_fundraising_details"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="399dp" />
    </ScrollView>

    <TextView
        android:id="@+id/fundraising_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fundraising Records"
        android:layout_marginTop="13dp"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollview_fundraising_details" />

    <ScrollView
        android:id="@+id/scrollview_fundraising_people"
        android:layout_width="394dp"
        android:layout_height="125dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fundraising_people">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fundraising_people_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <Button
        android:id="@+id/donate_btn"
        android:layout_width="371dp"
        android:layout_height="38dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/event_join_btn"
        android:text="Donate for this project"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollview_fundraising_people" />

</androidx.constraintlayout.widget.ConstraintLayout>